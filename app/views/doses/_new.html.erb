
<div class="form-new-dose">
  <%= simple_form_for [cocktail, dose] do |f| %>
    <%= f.input :description, input_html: { class: "dose-desc" }, placeholder: "Quantity" %>
    <%= f.association :ingredient, prompt: "Select ingredient" %>
    <%= f.button :submit, "Add", class: "btn btn-danger btn-add" %>
  <% end %>
</div>

